public class ReplaceChar {
    public static void main(String[] args) {

        String s = "banana";
        char oldChar = 'a';
        char newChar = 'o';

        StringBuilder sb = new StringBuilder();

        for (int i = 0; i < s.length(); i++) {
            if (s.charAt(i) == oldChar) {
                sb.append(newChar);
            } else {
                sb.append(s.charAt(i));
            }
        }

        System.out.println(sb.toString()); // bonono
    }
}
